<% @page_title = "Edit Page"  %>

<%= link_to("Back to list", pages_path, :class => 'back-link') %>

<div class="pages edit">
  <h2>Update Page</h2>

  <%= form_for(@page) do |f| %>

  <!-- When a partial needs a variable, we have to send it to the partial -->
  <%= render(:partial => 'form', :locals => {:f => f}) %>


  <div class="form-buttons">
    <%= f.submit("Update page") %>
  </div>
  <% end %>
</div>
