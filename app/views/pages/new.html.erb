<% @page_title = "Create Page"  %>

<%= link_to("Back to list", pages_path(:subject_id => @subject.id), :class => 'back-link') %>

<div class="pages new">
  <h2>Create Page</h2>

  <%= form_for(@page, :url => pages_path(:subject_id => @subject.id)) do |f| %>

  <!-- When a partial needs a variable, we have to send it to the partial -->
  <%= render(:partial => 'form', :locals => {:f => f}) %>


  <div class="form-buttons">
    <%= f.submit("Create page") %>
  </div>
  <% end %>
</div>
